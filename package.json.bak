{
  "name": "playwright-cucumber-framework",
  "version": "1.0.0",
  "description": "A scalable Playwright TypeScript automation framework using Cucumber BDD for web, mobile web emulation, and API testing.",
  "main": "tests/e2e/run.ts",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' features/**/*.feature",
    "test:watch": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' --watch features/**/*.feature",
    "test:api": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' features/api/**/*.feature",
    "test:web": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' features/web/**/*.feature",
    "test:mobile": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' features/mobile/**/*.feature",
    "test:smoke": "cucumber-js --require-module ts-node/register --require 'src/support/**/*.ts' --require 'src/steps/**/*.ts' --tags @smoke features/**/*.feature",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts features/**/*.feature"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "playwright": "^1.40.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "chai": "^4.3.10",
    "allure-commandline": "^2.25.0",
    "allure-cucumberjs": "^2.6.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "tslint": "^6.1.3"
  },
  "keywords": ["playwright", "cucumber", "bdd", "automation", "testing"],
  "author": "Your Name",
  "license": "MIT"
}